# Auto detect text files and perform LF normalization
*.sh text eol=lf

# Ensure shell scripts always use LF line endings
*.sh text eol=lf

# SQL files should use LF
*.sql text eol=lf

# Docker files
Dockerfile* text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf
docker-compose*.yaml text eol=lf

# Configuration files
.env* text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Ensure Windows batch files use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary